<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textCursorDrawable">@null</item>
        <item name="android:windowBackground">@color/window_background_color</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AnimIMMore">
        <item name="android:windowEnterAnimation">@anim/pop_im_more_fade_in</item>
        <item name="android:windowExitAnimation">@anim/pop_im_more_fade_out</item>
    </style>

    <style name="QRCodeMore">
        <item name="android:windowEnterAnimation">@anim/dialog_qrcode_more_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_qrcode_more_bottom_out</item>
    </style>

    <style name="CommonDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- float menu start -->
    <declare-styleable name="MenuItem">
        <attr name="menu_title" format="string" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <style name="Animation_top_left">
        <item name="android:windowEnterAnimation">@anim/float_menu_open_top_left</item>
        <item name="android:windowExitAnimation">@anim/float_menu_close_top_left</item>
    </style>

    <style name="Animation_bottom_left">
        <item name="android:windowEnterAnimation">@anim/float_menu_open_bottom_left</item>
        <item name="android:windowExitAnimation">@anim/float_menu_close_bottom_left</item>
    </style>

    <style name="Animation_bottom_right">
        <item name="android:windowEnterAnimation">@anim/float_menu_open_bottom_right</item>
        <item name="android:windowExitAnimation">@anim/float_menu_close_bottom_right</item>
    </style>
    <style name="Animation_top_right">
        <item name="android:windowEnterAnimation">@anim/float_menu_open_top_right</item>
        <item name="android:windowExitAnimation">@anim/float_menu_close_top_right</item>
    </style>
    <!-- float menu end -->

</resources>
